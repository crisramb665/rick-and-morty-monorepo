{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@utils/*": [
                "packages/utils/src/*"
            ],
            "@types/*": [
                "packages/types/src/*"
            ]
        }
    }
}